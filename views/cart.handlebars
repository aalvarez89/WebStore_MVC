<div class="shopwrap">
    {{#each cartData}}
    <div class="shopitem">

        <div class="shop-meal">
            <h2>{{this.title}}</h2>
            <p>{{this.synopsis}}</p>
        </div>
        <div class="shop-price">
            <h3>${{this.price}}</h3>
        </div>

    </div>
    {{/each}}

    <form action="/user/cart" method="post">
        <div class="shopbuy">
            <input type="submit" value="CHECKOUT" class="cart-submit"> 
            <h3>Total Items - {{cartItemsQty}}</h3>
            <h3 class="total">${{cartTotal}}</h3>
        </div>
    
    </form>
</div>